<?xml version="1.0" encoding="UTF-8" ?>
<phpunit
        bootstrap="./vendor/autoload.php"
        colors="true">
    <testsuites>
        <testsuite name="Crawler Test Suite">
            <directory phpVersion="7.1.0" phpVersionOperator=">=">./tests/unit/Crawler</directory>
            <file>*.php</file>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./tests/unit/Crawler</directory>
            <file>*.php</file>
        </whitelist>
    </filter>
</phpunit>